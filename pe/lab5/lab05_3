#include <stdio.h>

void exibeMatriz(int a, int b, int m[a][b]) {
    printf("A matriz digitada Ã©:\n");
    for (int i = 0; i < a; i++) {
        for (int j = 0; j < b; j++) {
            printf("%d ", m[i][j]);
        }
        printf("\n");
    }
}

int main() {
    int a, b;

    printf("Digite o tamanho da matriz: ");
    scanf("%d %d", &a, &b);

    int matriz[a][b];

    for (int i = 0; i < a; i++) {
        for (int j = 0; j < b; j++) {
            printf("Digite o elemento (%d,%d): ", i, j);
            scanf("%d", &matriz[i][j]);
        }
    }

    exibeMatriz(a, b, matriz);

    return 0;
}
